{% trans_default_domain 'FOSUserBundle' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css'|asset_version) }}" xmlns="http://www.w3.org/1999/html"/>
{% endblock %}

<div class="row">
    <div class="col-sm-8 col-sm-offset-2 text">
        <h1><strong>RecUp</strong>Register</h1>
        <div class="description">
            <h3>Join RecUp: A Social Network Website for Musicians</h3>
            <p>
               Welcome to RecUp, we are an online social network community for musicians with tools to help you promote your music;
               give and receive feedback on songs, videos, gear and more! For full details... <a class="btn btn-info" href="#">LINK</a>  {# later add about page #}
            </p>
            <p>
                We are FREE! We're here to promote YOUR music, We're here for YOU, to help you find others who share your passion. So
                come on in, join us today!
            </p>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-sm-offset-3 form-box">
{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
        <div class="form-group" id="fos_user_registration_form">
            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'form.email'|trans } }) }}
            {{ form_errors(form.email) }}

            {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'form.username'|trans } }) }}
            {{ form_errors(form.username) }}

            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'form.password'|trans } }) }}
            {{ form_errors(form.plainPassword.first) }}

            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'form.password_confirmation'|trans } }) }}
            {{ form_errors(form.plainPassword.second) }}

             {{ form_rest(form) }}
        </div>
       <div>
        <button type="submit" class="btn btn-danger btn-login" value="{{ 'registration.submit'|trans }}">Join </button>
       </div>
{{ form_end(form) }}
    </div>
</div>