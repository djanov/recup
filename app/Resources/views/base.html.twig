<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>{% block title %}RecUp{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/main.css'|asset_version) }}">
            <link rel="stylesheet" href="{{ asset('css/layout.css'|asset_version) }}"/>
            <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('tone.ico') }}" />
    </head>
    <body>
              <nav class="navbar navbar-default">
                      <div class="container-fluid">
                          <div class="navbar-header">
                              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#nav-collapse-1">
                                  <span class="icon-bar"></span>
                                  <span class="icon-bar"></span>
                                  <span class="icon-bar"></span>
                              </button>
                                <a class="brand" href="#"><img src="{{ asset('images/music_note.png') }}" /></a>
                              </div>
                     <div class="collapse navbar-collapse" id="nav-collapse-1">
                         <ul class="nav navbar-nav">
                            <li><a  href="#"><i class="fa fa-home" aria-hidden="true"></i> Home</a></li>
                            <li><a  href="#"><span class="glyphicon glyphicon-cd"> Notification</span></a></li>
                         </ul>
                         <ul class="nav navbar-nav navbar-right">
                             <li><a href="#"><i class="fa fa-plus" aria-hidden="true"></i> New Track</a></li>
                             <li class="dropdown">
                                 <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user" aria-hidden="true"></i><span class="caret"></span></a>
                                 <ul class="dropdown-menu">
                                     {#{{ knp_menu_render('AcmeHelloBundle:MenuBuilder:mainMenu', {'currentClass': 'active', 'template': 'AcmeHelloBundle:Menu:knp_menu.html.twig'}) }}#}

                                     {#{{ knp_menu_render('AcmeHelloBundle:MenuBuilder:userMenu', {'currentClass': 'active', 'template': 'AcmeHelloBundle:Menu:knp_menu.html.twig'}) }}#}
                                     <li><a href="#">Username</a></li>
                                     <li><a href="#">Another action</a></li>
                                     <li role="separator" class="divider"></li>
                                     <li><a href="#">Settings</a></li>
                                     <li><a href="#">Log out</a></li>
                                 </ul>
                             </li>
                             {{ knp_menu_render('UserBundle:MenuBuilder:mainMenu', {'currentClass': 'active', 'template': 'knp_menu.html.twig', 'allow_safe_labels': true})|raw }}
                         </ul>
                         <form class="navbar-form navbar-right">
                             <div class="form-group">
                                 <input type="text" class="search-input form-control" placeholder="&#xF002; Search for musicians" style="font-family:Arial, FontAwesome" />
                             </div>
                             <button type="submit" class="btn btn-default">Submit</button>
                         </form>

                     </div>
                          </div>
                  </nav>
        <div class="main-content">
            {% block body %}{% endblock %}
        </div>
        <div class="row">
             <div class="footer">
                 <p class="footer-text">&copy; 2016 <a href="https://github.com/djanov" target="_blank">Djanov</a></p>
             </div>
        </div>
    </div>
        {% block javascripts %}
            {#<script src="//code.jquery.com/jquery-2.1.4.min.js"></script>#}
            <script src="{{ asset('js/site.js'|asset_version) }}"></script>
            <script src="{{ asset('js/dropdown.js') }}"></script>
            <script src="{{ asset('js/collapse.js') }}"></script>
        {% endblock %}
    </body>
</html>
