<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>{% block title %}RecUp{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/main.css'|asset_version) }}">
            <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('tone.ico') }}" />
    </head>
    <body>
      <div class="container-fluid">
          <div class="row">
        <div class="col-md-12 search-bar">
            <form method="GET" action="" class="js-sea-search sea-search">
                <input type="search" name="q" placeholder="Search Sea Creatures" autocomplete="off" class="search-input">
            </form>
        </div>
          </div>
          <div class="row">
        <header class="header">
            <h1 class="logo"><img src="{{ asset('images/tone_64px.ico') }}" >RecUp</h1>
            <ul class="navi">
                <li class="search"><a href="#" class="js-header-search-toggle"><i class="fa fa-search"></i></a></li>
                <li><a href="#">Login</a></li>
            </ul>
        </header>
        </div>
        <div class="main-content">
            {% block body %}{% endblock %}
        </div>
        <div class="row">
             <div class="footer">
                 <p class="footer-text">&copy; 2016 <a href="https://github.com/djanov" target="_blank">Djanov</a></p>
             </div>
        </div>
    </div>
        {% block javascripts %}
            <script src="//code.jquery.com/jquery-2.1.4.min.js"></script>
            <script src="{{ asset('js/main.js') }}"></script>
        {% endblock %}
    </body>
</html>
