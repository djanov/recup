<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/html">
    <head>
        <meta charset="utf-8">
        <title>{% block title %}RecUp{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/main.css'|asset_version) }}">
            {#<link rel="stylesheet" href="{{ asset('css/layout.css'|asset_version) }}"/>#}
            <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
        {% endblock %}
        {% stylesheets '@FOSCommentBundle/Resources/assets/css/comments.css' %}
        <link rel="stylesheet" href="{{ asset('css/layout.css'|asset_version) }}"/>
        {% endstylesheets %}
        <link rel="icon" type="image/x-icon" href="{{ asset('tone.ico') }}" />
    </head>
    <body>
              <nav class="navbar navbar-default">
                      <div class="container">
                          <div class="navbar-header">
                              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#nav-collapse-1">
                                  <span class="icon-bar"></span>
                                  <span class="icon-bar"></span>
                                  <span class="icon-bar"></span>
                              </button>
                                <a class="brand" href="#"><img src="{{ asset('images/music_note.png') }}" /></a>
                              </div>
                     <div class="collapse navbar-collapse" id="nav-collapse-1">
                         {{ knp_menu_render('UserBundle:MenuBuilder:mainMenu', {'currentClass': 'active', 'template': 'UserBundle::knp_menu.html.twig', 'allow_safe_labels': true})|raw }}

                         {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                         {{ knp_menu_render('UserBundle:MenuBuilder:userMenu', {'currentClass': 'active', 'template': 'UserBundle::knp_menu.html.twig', 'allow_safe_labels': true})|raw }}
                         {% else %}
                             {#need to redirect#}
                         {% endif %}

                         <form class="navbar-form navbar-right">
                             <div class="form-group">
                                 <input type="text" class="search-input form-control" id="search" placeholder="&#xF002; Search for musicians"  style="font-family:Arial, FontAwesome" />
                             </div>
                             <p id="js-search"></p>

                             {#<button type="submit" class="btn btn-default">Submit</button>#}
                         </form>

                     </div>
                          </div>
                  </nav>
        <div class="main-content">
            {% block body %}{% endblock %}
        </div>
        <div class="row">
             <div class="footer">
                 <p class="footer-text">&copy; 2016 <a href="https://github.com/djanov" target="_blank">Djanov</a></p>
             </div>
        </div>
        {% block javascripts %}
            {#<script src="//code.jquery.com/jquery-2.1.4.min.js"></script>#}
            <script src="{{ asset('js/site.js'|asset_version) }}"></script>
            <script src="{{ asset('js/dropdown.js') }}"></script>
            <script src="{{ asset('js/collapse.js') }}"></script>
        {% endblock %}

    </body>
</html>
